<div class = "col results f">
   {% if result and str_cnt>1 and cnt>1 %} 
   <h4> Found {{str_cnt}} matches in {{cnt}} lines</h4>
   {% elif result and str_cnt>1 and cnt==1 %} 
   <h4> Found {{str_cnt}} matches in {{cnt}} line.</h4>
   {% elif result and str_cnt==1 and cnt==1 %} 
   <h4> Found {{str_cnt}} match in {{cnt}} line.</h4>
   {% elif cnt==0 %}   
   <h4>No matches found</h4>
   {% endif %}
</div>
<div class= "col results s">
   <table id="results" class="table table-striped">
      <!-- table header -->
      <thead>
         <tr>
            {% if result %}
            {% for key in result[0] %}
            <th> {{ key }} </th>
            {% endfor %}
            {% endif %}
         </tr>
      </thead>
      <!-- table rows -->
      {% for t in result %}
      <tbody>
         <tr>
            {% for key,value in t.items() %}
            <td>{{ value | safe }}</td>
            {% endfor %}
         </tr>
      </tbody>
      {% endfor %}
   </table>
</div>